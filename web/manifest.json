{
    "manifest_version": 2,
    "name": "IT Book",
    "version": "1.0",
    "browser_action": {
        "default_title": "IT Book",
        "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["jquery.min.js", "parse_mercury.js"],
      "persistent": false
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "http://*/*",
        "https://*/*",
        "<all_urls>",
        "storage"
    ],
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "jquery.min.js",
            "parcer.js",
            "parse_mercury.js"
        ]
    }]
}
